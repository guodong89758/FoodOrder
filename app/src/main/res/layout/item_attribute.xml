<?xml version="1.0" encoding="utf-8"?>
<com.foodorder.cell.AttributeCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/formulat_item_height"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="80dp"
            android:singleLine="true"
            android:text="商品名"
            android:textColor="@color/black_80"
            android:textSize="@dimen/formulat_item_text_size" />

        <LinearLayout
            android:id="@+id/ll_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right">

            <ImageButton
                android:id="@+id/tv_minus"
                android:layout_width="@dimen/button_count_size"
                android:layout_height="@dimen/formulat_item_height"
                android:background="@color/transparent"
                android:src="@drawable/button_minus" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:minWidth="@dimen/button_count_size"
                android:text="0"
                android:textColor="@color/black_80"
                android:textSize="@dimen/count_size" />

            <ImageButton
                android:id="@+id/tv_add"
                android:layout_width="@dimen/button_count_size"
                android:layout_height="@dimen/formulat_item_height"
                android:background="@color/transparent"
                android:src="@drawable/button_add" />
        </LinearLayout>
    </RelativeLayout>

</com.foodorder.cell.AttributeCell>
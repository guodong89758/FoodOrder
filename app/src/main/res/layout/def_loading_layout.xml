<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.foodorder.widget.ProgressBarCircular
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@color/progressbar_color" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/def_data_loading"
        android:textColor="@color/black_60"
        android:textSize="@dimen/popup_title_text_size" />

    <View
        android:id="@+id/temp_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/popup_title_height"/>

</LinearLayout>